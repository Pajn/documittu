
{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "target": "es2015",
    "lib": ["es5", "es2015", "es2016", "es2017"],
    "jsx": "react",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": ".",
    "strictNullChecks": true,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
