{
  "private": true,
  "devDependencies": {
    "lerna": "^2.8.0",
    "prettier": "^1.10.2",
    "tslint": "^5.8.0",
    "tslint-config-pajn": "^1.0.0",
    "typescript": "2.7.1"
  },
  "resolutions": {
    "@types/react": "16.0.40",
    "@types/react-dom": "16.0.3"
  },
  "scripts": {
    "format": "prettier --write --single-quote --trailing-comma all --no-bracket-spacing --no-semi packages/*/src/**/*.{js,jsx,ts,tsx}",
    "docs": "yarn docs-analyze && documittu build",
    "docs-dev": "documittu start",
    "docs-analyze": "node ./packaes/build/main . > docs/analyze-result.json"
  },
  "workspaces": [
    "packages/*"
  ]
}
